                    <GridViewColumn Header="用户昵称" Width="110" DisplayMemberBinding="{Binding UserID}"/>
                    <GridViewColumn Header="发言次数" Width="70" DisplayMemberBinding="{Binding MsgTimes}"/>
                    <GridViewColumn Header="最后活跃时间" Width="150" DisplayMemberBinding="{Binding LastMsgTime}"/>
