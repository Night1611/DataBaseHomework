            </ListView.View>
        </ListView>
        <TextBlock x:Name="textBlock2_Copy" HorizontalAlignment="Left" Margin="113,20,0,0" TextWrapping="Wrap" Text="用户IP" VerticalAlignment="Top" RenderTransformOrigin="0.063,0.434"/>
