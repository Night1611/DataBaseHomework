        <TextBlock x:Name="textBlock_Copy" HorizontalAlignment="Left" Margin="117,23,0,0" TextWrapping="Wrap" Text="消息序号" VerticalAlignment="Top" RenderTransformOrigin="-0.183,-0.662"/>
        <TextBlock x:Name="textBlock1_Copy" HorizontalAlignment="Left" Margin="206,23,0,0" TextWrapping="Wrap" Text="发送时间" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock2_Copy" HorizontalAlignment="Left" Margin="323,23,0,0" TextWrapping="Wrap" Text="消息IP" VerticalAlignment="Top" RenderTransformOrigin="0.063,0.434"/>
